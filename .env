# ========================================
# API Configuration for Multiple Models
# ========================================

# OpenAI API Configuration (GPT models)
# OPENAI_API_KEY=your_OpenAI_token_here

# Anthropic API Configuration (Claude models)
# ANTHROPIC_API_KEY= your_Anthropic_token_here

# Google API Configuration (Gemini models)
GOOGLE_API_KEY=your_GOOGLE_token_here

# XAI API Configuration (Grok models)
XAI_API_KEY=your_XAI_token_here

# Zhipu AI API Configuration (GLM models)
ZHIPU_API_KEY=your_Zhipu_token_here

# HuggingFace API Configuration (for local models)
# HUGGINGFACEHUB_API_TOKEN=your_huggingface_token_here

# ========================================
# Model Configuration
# ========================================

# Default model to use (options: gpt-3.5-turbo, gpt-4, claude-3-sonnet, gemini-2.0-flash, grok-3, grok-4-fast-reasoning, glm-4.6, local)
DEFAULT_MODEL=grok-3
DEFAULT_TEMPERATURE=0.1
DEFAULT_MAX_TOKENS=1000

# ========================================
# Vector Store Configuration
# ========================================

# Vector store type (options: FAISS, ChromaDB)
VECTOR_STORE_TYPE=FAISS
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ========================================
# Document Processing Configuration
# ========================================

CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=3

# ========================================
# Testing Configuration
# ========================================

# Enable model testing features
ENABLE_MODEL_TESTING=true

# Test data file path (optional, will use default if not specified)
TEST_DATA_FILE=test_data.json

# ========================================
# Logging Configuration
# ========================================

LOG_LEVEL=INFO
LOG_FILE=logs/retrieval.log

# ========================================
# Performance Configuration
# ========================================

# Request timeouts (in seconds)
OPENAI_TIMEOUT=30
ANTHROPIC_TIMEOUT=30
GOOGLE_TIMEOUT=30
XAI_TIMEOUT=30
ZHIPU_TIMEOUT=30

# Rate limiting (requests per minute)
DEFAULT_RATE_LIMIT=60